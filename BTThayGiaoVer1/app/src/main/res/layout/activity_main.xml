<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center|right|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/counttime"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="right|center_vertical"
            android:paddingRight="10dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:paddingRight="10dp"
            android:text="Giây"
            android:textColor="#FFFFFF" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="popupMenu"
            app:srcCompat="@android:drawable/arrow_down_float" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layouttren"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nv1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|center_horizontal"
                android:layout_weight="1"
                android:text="Máy"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtsonut"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|center_horizontal"
                android:layout_weight=".4"
                android:text="Số nút: " />

            <TextView
                android:id="@+id/sonut1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight=".2"
                android:text="0" />

            <TextView
                android:id="@+id/txtdiem1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginLeft="25dp"
                android:layout_weight=".2"
                android:text="Điểm: " />

            <TextView
                android:id="@+id/diem1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_weight=".2"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/may1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3" />

            <ImageView
                android:id="@+id/may2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3" />

            <ImageView
                android:id="@+id/may3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutduoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nv2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|center_horizontal"
                android:layout_weight="1"
                android:text="Người"
                android:textSize="20dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|center_horizontal"
                android:layout_weight=".4"
                android:text="Số nút: " />

            <TextView
                android:id="@+id/sonut2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight=".2"
                android:text="0" />

            <TextView
                android:id="@+id/txtdiem2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginLeft="25dp"
                android:layout_weight=".2"
                android:text="Điểm: " />

            <TextView
                android:id="@+id/diem2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_weight=".2"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/nguoi1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3" />

            <ImageView
                android:id="@+id/nguoi2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3" />

            <ImageView
                android:id="@+id/nguoi3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/showtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <NumberPicker
            android:id="@+id/phut"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Phút" />

        <NumberPicker
            android:id="@+id/giay"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Giây" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">
    <Button
        android:id="@+id/play"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorButton"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Chơi"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    </LinearLayout>
</LinearLayout>