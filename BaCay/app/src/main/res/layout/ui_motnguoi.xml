<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    tools:context=".ui.main.PlaceholderFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight=".5"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tab1nguoichoi_labai1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".3" />

        <ImageView
            android:id="@+id/tab1nguoichoi_labai2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight=".3" />

        <ImageView
            android:id="@+id/tab1nguoichoi_labai3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight=".3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1" />

    </LinearLayout>

    <Button
        android:id="@+id/tab1nguoichoi_button"
        style="@android:style/Widget.Holo.Light.Button.Small"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="right|center_vertical|end"
        android:text="Rút bài"
        android:textSize="20dp"
        tools:layout_marginTop="50dp" />

</LinearLayout>