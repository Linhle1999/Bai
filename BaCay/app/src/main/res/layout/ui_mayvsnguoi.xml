<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".ui.main.PlaceholderFragment">

    <LinearLayout
        android:id="@+id/layouttren"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nv1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="Máy"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtsonut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:text="Số nút: " />

            <TextView
                android:id="@+id/tabmayvsnguoi_sonutcuamay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight=".2"
                android:text="0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tabmayvsnguoi_labai1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3" />

            <ImageView
                android:id="@+id/tabmayvsnguoi_labai2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3" />

            <ImageView
                android:id="@+id/tabmayvsnguoi_labai3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3" />

        </LinearLayout>

        <Button
            android:id="@+id/tabmayvsnguoi_buttonmayrut"
            style="@android:style/Widget.Holo.Light.Button.Small"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="clip_horizontal|center"
            android:layout_marginTop="15dp"
            android:background="#03A9F4"
            android:text="Máy rút bài"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutduoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nv2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="Người"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Số nút: " />

            <TextView
                android:id="@+id/tabmayvsnguoi_sonutcuanguoi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight=".2"
                android:text="0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tabmayvsnguoi_labai4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3" />

            <ImageView
                android:id="@+id/tabmayvsnguoi_labai5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3" />

            <ImageView
                android:id="@+id/tabmayvsnguoi_labai6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/tabmayvsnguoi_buttonnguoirut"
        style="@android:style/Widget.Holo.Light.Button.Small"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="clip_horizontal|center"
        android:background="#009688"
        android:layout_marginTop="15dp"
        android:text="Người rút bài"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

</LinearLayout>